{% extends 'layout.html.twig' %}
{% set active = 'components' %}

{% block content %}

    <div>
        {% if is_granted('ROLE_USER') %}
            Hello "{{ app.security.token.username }}".<br />
            <div style="float:right;margin-top:-40px;"><a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a></div>
        {% else %}
            Your a not logged. Please <a href="{{ path('login') }}">{{ 'connect'|trans }}</a>
        {% endif %}
        <div id="messages">
            {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
            {% for alert in alertTypeAvaillable %}
                {% for message in app.session.getFlashBag.get(alert) %}
